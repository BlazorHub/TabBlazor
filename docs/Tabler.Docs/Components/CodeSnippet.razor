<TablerCard>
    <TablerCardHeader id="@Id">
        <h4 class="card-title">@Title</h4>
    </TablerCardHeader>

    <TablerCardBody>
        @Description

        <div class="p-3 @ExampleBackground()" >
            @Example
        </div>
        
        <div class="card-code">
            <figure class="highlight">
                @((MarkupString)@Code)
            </figure>
        </div>

    </TablerCardBody>
</TablerCard>

