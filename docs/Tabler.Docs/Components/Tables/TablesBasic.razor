<Table Item="Order" Items="orders" PageSize="10" OnItemEdited="OnItemEdit" OnItemSelected="OnItemSelect" OnItemAdded="OnItemAdd" OnItemDeleted="OnItemDelete">
    <HeaderTemplate>
        <strong>Orders</strong>
    </HeaderTemplate>

  

    <ChildContent>
        <Column Item="Order" Property="e=>e.CustomerName" Title="Customer" Sortable Searchable Groupable>
            <EditorTemplate>
                <input type="text" @bind-value="@context.CustomerName" />
            </EditorTemplate>
        </Column>
        <Column Item="Order" Property="e=>e.Country" Title="Country" Sortable Searchable Groupable>
            <EditorTemplate>
                <input type="text" @bind-value="@context.Country" />
            </EditorTemplate>
        </Column>
        <Column Item="Order" Property="e=>e.OrderType" Title="Order type" Sortable Searchable Groupable>
            <EditorTemplate>
                <ItemSelect Items="EnumInfo.GetList<OrderType>()" @bind-SelectedValue="@context.OrderType" TextExpression="e=> e.ToString()" ValueExpression="e=> e.ToString()" Clearable />
            </EditorTemplate>
        </Column>
    </ChildContent>

</Table>

@code {

    [Inject] Tabler.Services.TablerService TablerService { get; set; }
    private List<Order> orders = SampleData.GetOrders();


    private async Task OnItemEdit(Order order)
    {
        await TablerService.ShowAlert($"Edited order {order.OrderId}");
    }

    private async Task OnItemAdd(Order order)
    {
        await TablerService.ShowAlert($"Added order {order.OrderId}");
    }

    private async Task OnItemSelect(Order order)
    {
        await TablerService.ShowAlert($"Selected order {order.OrderId}");
    }

    private async Task OnItemDelete(Order order)
    {
        await TablerService.ShowAlert($"Order deleted {order.OrderId}");
    }

}