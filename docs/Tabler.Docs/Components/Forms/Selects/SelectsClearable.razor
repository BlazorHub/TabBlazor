<ItemSelect Items="Data.SampleData.GetCustomers()"
            @bind-SelectedValue="selectedCustomer"
            TextExpression="e=>e.CustomerName"
            ValueExpression="e => e.CustomerId.ToString()"
            Clearable
            NoSelectedText="*Select Customer*" />
<br />

@if (selectedCustomer != null)
{
    <div>Selected Customer : </div>
    @selectedCustomer.CustomerName
}

@code {
    private Customer selectedCustomer;
}