<Table Item="Order" Items="SampleData.GetOrders()" PageSize="5">
    <HeaderTemplate>
        <CardTitle>Orders</CardTitle>
    </HeaderTemplate>
    <ChildContent>
        <Column Item="Order" Property="e=>e.Customer.CustomerName" Title="Customer" Sortable />

        <Column Item="Order" Property="e=>e.OrderDate" Title="Date" Sortable>
            <Template>
                @context.OrderDate.ToString("d")
            </Template>
        </Column>

        <Column Item="Order" Property="e=>e.OrderType" Title="Type" Sortable>
            <Template>
                @context.OrderType
            </Template>
        </Column>
    </ChildContent>
   
</Table>