
<TablerDropDown>
    <TablerButton @onclick="toogleOpen" BackgroundColor="TablerColor.Primary">
        Toogle
    </TablerButton>
    <TablerDropDownMenu Show="isOpen">
        <TablerDropDownItem>Item 1</TablerDropDownItem>
        <TablerDropDownItem>Item 2</TablerDropDownItem>
        <TablerDropDownItem>Item 3</TablerDropDownItem>
    </TablerDropDownMenu>
</TablerDropDown>

@code {
    private bool isOpen = true;

    private void toogleOpen()
    {
        isOpen = !isOpen;
    }
} 