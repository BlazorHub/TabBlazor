@inherits TablerBaseComponent
@namespace Tabler.Components
<ClickOutside OnClickOutside="OnClickOutside">
    <HtmlElement Tag="div"
                 class="@ClassNames"
                 @onclick="OnDropdownClick"
                 @attributes="@UnmatchedParameters">


        @ChildContent

        @if (isExpanded)
        {
            @DropdownTemplate
        }
    </HtmlElement>
</ClickOutside>