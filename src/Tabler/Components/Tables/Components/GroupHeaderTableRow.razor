@typeparam TableItem

@inherits GroupHeaderTableRowBase<TableItem>

@if (Group != null)
{
<AllColumnRow TableItem="TableItem" CssClass="grouping-row">
    <div class="mr-2 clickable @ExpandedCss()" @onclick="ToogleExpanded" />
    @if (Group?.GroupingTemplate != null)
    {
        @Group.GroupingTemplate(Group)
    }
    else if (Group?.Key != null)
    {
        @($"{Group.Key} ({Group.Count})")
    }
    else
    {
        @*@($"{Loc.GetString(x => x.Table_NoValue)} ({Group.Count})")*@
    }

</AllColumnRow>
}