@inherits TablerBaseComponent
@namespace Tabler.Components


<HtmlElement Tag="@HtmlTag"
             class="@ClassNames"
             type="@InputType"
             href="@Href"
             @onclick="OnClick"
             role="button"
             @attributes="@UnmatchedParameters">
    @if (ChildContent == null)
    {
        @Text
    }
    else
    {
        @ChildContent
    }

</HtmlElement>
